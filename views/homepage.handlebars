<ol class="post-list">
  {{#each posts as |post|}}
  <li>
    <article class="post">
      <div class="title">
        <a href="/single-post/{{id}}">{{post.title}}</a>
      </div>
      <div class="meta">
        Submitted by {{user.username}} on {{post.createdAt}}
      |
      <a href="/post/{{post._id}}">{{post.comments.length}} comments</a>
      </div>
    </article>
  </li>
  {{/each}}
</ol>

